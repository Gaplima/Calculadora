<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Display da calculadora -->
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="end|bottom"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="0"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ds_digi"
        android:background="@drawable/display_background"
        android:padding="16dp"
        android:elevation="4dp"
        android:scrollHorizontally="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Grade de botões -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="5"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Linha 1 -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            style="@style/Widget.Material3.Button"
            android:text="C"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackspace"
            style="@style/Widget.Material3.Button"
            android:text="⌫"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExponencial"
            style="@style/Widget.Material3.Button"
            android:text="xª"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResto"
            style="@style/Widget.Material3.Button"
            android:text="Resto"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>


        <!-- Linha 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/Widget.Material3.Button"
            android:text="7"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/Widget.Material3.Button"
            android:text="8"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/Widget.Material3.Button"
            android:text="9"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSomar"
            style="@style/Widget.Material3.Button"
            android:text="+"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>


        <!-- Linha 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/Widget.Material3.Button"
            android:text="4"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/Widget.Material3.Button"
            android:text="5"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/Widget.Material3.Button"
            android:text="6"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtrair"
            style="@style/Widget.Material3.Button"
            android:text="-"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>


        <!-- Linha 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/Widget.Material3.Button"
            android:text="1"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/Widget.Material3.Button"
            android:text="2"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/Widget.Material3.Button"
            android:text="3"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiplicar"
            style="@style/Widget.Material3.Button"
            android:text="×"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>

        <!-- Linha 5 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/Widget.Material3.Button"
            android:text="0"
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPonto"
            style="@style/Widget.Material3.Button"
            android:text="."
            app:rippleColor="?attr/colorOnPrimaryContainer"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIgual"
            style="@style/Widget.Material3.Button"
            android:text="="
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/cyan"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDividir"
            style="@style/Widget.Material3.Button"
            android:text="÷"
            app:rippleColor="?attr/colorOnPrimaryContainer"
            app:backgroundTint="@color/indigo"/>


    </GridLayout>
    <!-- Histórico de cálculos abaixo dos botões -->
    <ScrollView
        android:id="@+id/scrollHistorico"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/gridButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="end"
            android:padding="8dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>